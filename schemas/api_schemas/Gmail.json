{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "methods": {
      "type": "object",
      "properties": {
        "SearchThreads": {
          "type": "object",
          "properties": {
            "arguments": {
              "type": "object",
              "properties": {
                "subject": {
                  "type": "string",
                  "description": "Subject search term"
                },
                "sender": {
                  "type": "string",
                  "description": "Sender email address"
                },
                "date_range": {
                  "type": "string",
                  "description": "Date range (e.g., 'last_30_days')"
                }
              }
            },
            "result": {
              "type": "object",
              "properties": {
                "thread_ids": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "GetThread": {
          "type": "object",
          "properties": {
            "arguments": {
              "type": "object",
              "required": ["thread_id"],
              "properties": {
                "thread_id": {
                  "type": "string",
                  "description": "Thread ID to retrieve"
                }
              }
            },
            "result": {
              "type": "object",
              "properties": {
                "thread": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "subject": {
                      "type": "string"
                    },
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "from": {
                            "type": "string"
                          },
                          "to": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "subject": {
                            "type": "string"
                          },
                          "body": {
                            "type": "string"
                          },
                          "date": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

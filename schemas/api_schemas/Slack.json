{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "methods": {
      "type": "object",
      "properties": {
        "search_messages": {
          "type": "object",
          "properties": {
            "arguments": {
              "type": "object",
              "required": ["query"],
              "properties": {
                "query": {
                  "type": "string",
                  "description": "Search query string (e.g., 'from:@tom has:calendar OR (meeting AND (schedule OR time))')"
                }
              }
            },
            "result": {
              "type": "object",
              "properties": {
                "messages": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "text": {
                        "type": "string"
                      },
                      "user_id": {
                        "type": "string"
                      },
                      "channel_id": {
                        "type": "string"
                      },
                      "timestamp": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
